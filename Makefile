#=======================================================================
# makefile
# $Id: Makefile,v 1.1.1.2 2015/08/22 00:00:00 seiji Exp seiji $
#=======================================================================
.SUFFIXES: .f .o
SHELL	= /bin/sh
#-----------------------------------------------------------------------
FC	= ftn
FFLAGS	= -O3 -F -rm
LIBS	=
#-----------------------------------------------------------------------
SRC	= paraio.f
OBJ	= $(subst .f,.o,$(SRC))
BIN	= paraio
#-----------------------------------------------------------------------
.f.o:
	$(FC) $(FFLAGS) -c -o $@ $<
#-----------------------------------------------------------------------
$(BIN): $(OBJ)
	$(FC) $(FFLAGS) -o $@ $^ $(LIBS)

clean:
	rm -f *.o *.lst core* *~
	rm -f $(BIN)
clobber: clean
	rm -f *.tgz
#-----------------------------------------------------------------------
-include addon.mk
